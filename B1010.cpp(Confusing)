	//传入指数和系数
	while (scanf("%d%d", &k, &e) != EOF) a[e] = k;//hashTable的思想：a[指数] = 系数 
	a[0] = 0;//零次项系数求导之后为零

	//从一次项开始，否则后面还没有用的数据会被覆盖
	for (int i = 1; i <= 1000; ++i) {
		a[i - 1] = a[i] * i;
		a[i] = 0;//
		if (a[i - 1] != 0)count++;//统计不为零的导数项个数
	}

	if (count == 0)printf("0 0");
	else {
		for (int i = 1000; i >= 0; i--) {
			if (a[i] != 0) {
				printf("%d %d", a[i], i);
				count--;
				if (count != 0) printf(" ");
			}
		}
	}
	return 0;
}
